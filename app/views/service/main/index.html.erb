<section id="intro">
	<div class="mr-slider">
        <div class="mr-slider-wrapper">
          <% Service::Slider.all.each do |slide| %>
           	<div class="mr-slider-slide" style="background-image: url('<%= slide.image.url %>');">
              <% unless slide.slave == ''  %>
                <div class="VideoYoutube"><iframe width="100%" height="100%" src="https://www.youtube.com/embed/<%= slide.slave %>?rel=0&hd=1&controls=0&modestbranding=0&autoplay=1&&showinfo=0&start=8&mute=1&loop=1&playlist=<%= slide.slave %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" frameborder="0" controls="0"></iframe></div>
              <% end unless slide.slave.nil? %>
            	<div class="mr-slider-text">
            		<div class="mr-slider-text-header"><%=slide.title %></div>
            		<div class="mr-slider-text-p"><%=slide.description %></div>
              </div>
              <div class="mr-slider-bat">      
                  <a href="<%=slide.url %>" target="_blank" class="buttonA"><%=slide.link %></a>
                  <div class="buttonB"><span>записаться через</span></div>
                  <div class="socials">
                    <a href="https://vk.com/lipetskprime" class="vk" target="_blank"></a>
                    <a href="https://www.instagram.com/prime_lipetsk" target="_blank" class="insta"></a>
                    <a href="https://www.youtube.com/channel/UCNusqHRWAdF75CUioreV8HQ" class="youtube" target="_blank"></a>
                    <a href="https://www.facebook.com/lipetskprime" class="fb" target="_blank"></a>
                    <a href="https://ok.ru/lipetskprime" class="ok" target="_blank"></a>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
        <div class="mr-slider-btns">
            <div class="prev-btn" onclick="return prevSlide1();"></div>
            <div class="next-btn" onclick="return nextSlide1();"></div>
        </div>
	</div>
</section>

