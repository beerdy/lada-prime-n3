= form_for @service_slider do |f|
  - if @service_slider.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service_slider.errors.count, "error")} prohibited this service_slider from being saved:"
      %ul
        - @service_slider.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :slave
    = f.text_area :slave
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :sort
    = f.number_field :sort
  .field
    = f.label :show
    = f.check_box :show
  .actions
    = f.submit 'Save'
